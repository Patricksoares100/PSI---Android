<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServidorActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLogoServidor"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:contentDescription="@string/descriptionLogo"
        app:srcCompat="@drawable/conection"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/tvServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tv_servidorNome"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvIpServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/hint_ip"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etIpServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:minHeight="48dp"
        android:text="@string/ipServidor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonConfirmarServidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:onClick="onClickServidor"
            android:text="@string/btn_Confirmar" />
    </LinearLayout>

</LinearLayout>